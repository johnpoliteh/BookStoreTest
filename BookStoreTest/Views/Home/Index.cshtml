
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div> 
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Author</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
        @*Для ImageResult*@
        <h3><a href="/Home/GetImage">Тестовая картинка</a></h3>
        <h3></h3>    
        @*Скачать файл*@
        <h3><a href="/Home/GetFile">Скачать файл</a></h3>
        @*Контекст запроса*@
        <h4><a href="/Home/Context">Контекст</a></h4>
</div>

